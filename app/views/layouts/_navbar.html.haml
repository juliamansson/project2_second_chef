%nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %strong= link_to "UBERCOOK", root_path, class: "navbar-brand"
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to "My orders", orders_path
          - if current_user.role?(:chef)
            %li= link_to "My chef profile", user_path(current_user)
          - else current_user
            %li= link_to "Become a chef!", edit_user_path(current_user)
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", href: "#", role: "button"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li= link_to "My account", edit_user_registration_path
              %li= link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Log in", new_user_session_path
          %li= link_to "Register", new_user_registration_path
